{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@modules/*": ["modules/*"],
      "@common/*": ["common/*"],
      "@auth/*": ["auth/*"],
      "@database/*": ["database/*"]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
